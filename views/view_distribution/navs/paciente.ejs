<!-- Link Relacionados con Citas -->
<% if (user.permisosUsers_CreateCitas == 1) {  %>
<li class="bold">
  <div class="collapsible-header"><i class="material-icons">perm_contact_calendar</i>Citas</div>
  <div class="collapsible-body grey lighten-5">
    <% if (user.Sedes.length > 0 && user.permisosUsers_CreateCitas == 1) { 
      for (let i = 0; i < user.Sedes.length; i++) {
        const sede = user.Sedes[i]; %>
    <a href="/citas?sede=<%= sede._id %>" class="waves-effect collection-item waves-cyan"
      style="padding-left: 20px; width: 95%;">
      <i class="material-icons">class</i>
      <span class="nav-text"><%= sede.nombre %></span>
    </a>
    <% } 
     } else { %>
    <a href="#" class="waves-effect collection-item waves-cyan" style="padding-left: 20px; width: 95%;">
      <i class="material-icons">close</i>
      <span class="nav-text">No hay sedes asignadas</span>
    </a>
    <% } %>
  </div>
</li>
<% } %>
